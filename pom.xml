<?xml version='1.0' encoding='utf-8'?>
<ns0:project xmlns:ns0="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <ns0:modelVersion>4.0.0</ns0:modelVersion>
  <ns0:groupId>com.minkang.uaq</ns0:groupId>
  <ns0:artifactId>UltimateAttendanceQuest</ns0:artifactId>
  <ns0:version>2.3.0-KR</ns0:version>
  <ns0:name>UltimateAttendanceQuest</ns0:name>
  <ns0:description>Attendance &amp; Quest system with GUI editors + NPC linking</ns0:description>
  <ns0:properties>
    <ns0:maven.compiler.release>11</ns0:maven.compiler.release>
    <ns0:project.build.sourceEncoding>UTF-8</ns0:project.build.sourceEncoding>
    <ns0:spigot.api.version>1.16.5-R0.1-SNAPSHOT</ns0:spigot.api.version>
  </ns0:properties>
  <ns0:repositories>
    <ns0:repository>
      <ns0:id>spigot-repo</ns0:id>
      <ns0:url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</ns0:url>
    </ns0:repository>
    <ns0:repository>
      <ns0:id>papermc-repo</ns0:id>
      <ns0:url>https://repo.papermc.io/repository/maven-public/</ns0:url>
    </ns0:repository>
    <ns0:repository>
      <ns0:id>jitpack.io</ns0:id>
      <ns0:url>https://jitpack.io</ns0:url>
    </ns0:repository>
    <ns0:repository>
      <ns0:id>citizens-repo</ns0:id>
      <ns0:url>https://repo.citizensnpcs.co/</ns0:url>
    </ns0:repository>
  </ns0:repositories>
  <ns0:dependencies>
    <ns0:dependency>
      <ns0:groupId>org.spigotmc</ns0:groupId>
      <ns0:artifactId>spigot-api</ns0:artifactId>
      <ns0:version>${spigot.api.version}</ns0:version>
      <ns0:scope>provided</ns0:scope>
    </ns0:dependency>
    <ns0:dependency>
      <ns0:groupId>com.github.MilkBowl</ns0:groupId>
      <ns0:artifactId>VaultAPI</ns0:artifactId>
      <ns0:version>1.7</ns0:version>
      <ns0:scope>provided</ns0:scope>
    </ns0:dependency>
    <ns0:dependency>
      <ns0:groupId>net.citizensnpcs</ns0:groupId>
      <ns0:artifactId>citizensapi</ns0:artifactId>
      <ns0:version>2.0.29-SNAPSHOT</ns0:version>
      <ns0:scope>provided</ns0:scope>
      <ns0:optional>true</ns0:optional>
    </ns0:dependency>
  </ns0:dependencies>
  <ns0:build>
    <ns0:plugins>
      <ns0:plugin>
        <ns0:groupId>org.apache.maven.plugins</ns0:groupId>
        <ns0:artifactId>maven-compiler-plugin</ns0:artifactId>
        <ns0:version>3.11.0</ns0:version>
        <ns0:configuration>
          <ns0:release>${maven.compiler.release}</ns0:release>
        </ns0:configuration>
      </ns0:plugin>
      <ns0:plugin>
        <ns0:groupId>org.apache.maven.plugins</ns0:groupId>
        <ns0:artifactId>maven-shade-plugin</ns0:artifactId>
        <ns0:version>3.5.1</ns0:version>
        <ns0:executions>
          <ns0:execution>
            <ns0:phase>package</ns0:phase>
            <ns0:goals>
              <ns0:goal>shade</ns0:goal>
            </ns0:goals>
            <ns0:configuration>
              <ns0:minimizeJar>false</ns0:minimizeJar>
            </ns0:configuration>
          </ns0:execution>
        </ns0:executions>
      </ns0:plugin>
      <ns0:plugin>
        <ns0:groupId>org.apache.maven.plugins</ns0:groupId>
        <ns0:artifactId>maven-enforcer-plugin</ns0:artifactId>
        <ns0:version>3.4.1</ns0:version>
        <ns0:executions>
          <ns0:execution>
            <ns0:id>enforce-java</ns0:id>
            <ns0:goals>
              <ns0:goal>enforce</ns0:goal>
            </ns0:goals>
            <ns0:configuration>
              <ns0:rules>
                <ns0:requireJavaVersion>
                  <ns0:version>[11,)</ns0:version>
                </ns0:requireJavaVersion>
              </ns0:rules>
              <ns0:fail>true</ns0:fail>
            </ns0:configuration>
          </ns0:execution>
        </ns0:executions>
      </ns0:plugin>
    </ns0:plugins>
    <ns0:resources>
      <ns0:resource>
        <ns0:directory>src/main/resources</ns0:directory>
        <ns0:filtering>false</ns0:filtering>
      </ns0:resource>
    </ns0:resources>
    <ns0:finalName>UltimateAttendanceQuest-${project.version}</ns0:finalName>
  </ns0:build>
  <ns0:dependencyManagement>
    <ns0:dependencies>
      <ns0:dependency>
        <ns0:groupId>org.slf4j</ns0:groupId>
        <ns0:artifactId>slf4j-api</ns0:artifactId>
        <ns0:version>1.7.36</ns0:version>
      </ns0:dependency>
      <ns0:dependency>
        <ns0:groupId>ch.qos.logback</ns0:groupId>
        <ns0:artifactId>logback-classic</ns0:artifactId>
        <ns0:version>1.2.13</ns0:version>
      </ns0:dependency>
    </ns0:dependencies>
  </ns0:dependencyManagement>
</ns0:project>